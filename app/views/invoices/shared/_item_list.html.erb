<li class="list-group-item">
  <div>

    <% # Only for packages and sky store %>
    <% if local_assigns[:sub_title] %>
      <em class="subTitle<%= " colorCode-#{ sub_title.parameterize }" %>">
        <%= sub_title %>
      </em>
    <% end %>

    <span class="itemTitle">
      <% # Displaying a glyphicon phone left of the number for visual impact  %>
      <%= content_tag(:span, nil,{ class: ['glyphicon', 'glyphicon-phone-alt'], aria: { hidden: "true" } }) if local_assigns[:call_duration]  %>
      <%= title %>
    </span>

    <% # Only for call charges  %>
    <% if local_assigns[:call_duration] %>
      | <em><span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span> <%= call_duration %></em>
    <% end %>

    <span class="right bold amount"><%= amount %></span>
  </div>
</li>
